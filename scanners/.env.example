############################################
# BugChainIndexer Environment Configuration
############################################
# Copy this file to .env and fill in your API keys

# ================================
# SCANNER SETTINGS (Optional Overrides)
# ================================
# Time window for activity scan (hours) - Default: 4
#TIMEDELAY_HOURS=4

# Token price cache validity (days) - Default: 7  
#FUNDUPDATEDELAY_DAYS=7

# Script timeout (seconds) - Default: 7200
#TIMEOUT_SECONDS=7200

# Timeout kill after (seconds) - Default: 3600
#TIMEOUT_KILL_AFTER=3600

# ================================
# DATABASE (PostgreSQL)
# ================================
PGHOST=localhost
PGPORT=5432
PGDATABASE=bugchain_indexer
PGUSER=postgres
PGPASSWORD=

# Alternative database URL format (used by some scripts)
#DATABASE_URL=postgresql://postgres:password@localhost:5432/bugchain_indexer

# ================================
# API KEYS (REQUIRED)
# ================================
# Default Etherscan API keys (comma-separated for failover)
DEFAULT_ETHERSCAN_KEYS=your_key1,your_key2,your_key3

# Default CoinGecko API key for price data
DEFAULT_COINGECKO_KEY=your_coingecko_key

# CoinGecko API key override (uses DEFAULT_COINGECKO_KEY if not set)
#COINGECKO_API_KEY=your_specific_coingecko_key

# ================================
# EXECUTION SETTINGS (Runtime Options)
# ================================
# Network to process (set at runtime)
#NETWORK=ethereum

# Fund updater options
#ALL_FLAG=true                           # Process all addresses regardless of update time
#HIGH_FUND_FLAG=true                     # Process only high-value fund addresses
#FUND_UPDATE_MAX_BATCH=50000             # Maximum batch size for fund updates

# Price update settings
#PRICE_UPDATE_INTERVAL_DAYS=7            # Days between price updates
#FORCE_PRICE_UPDATE=true                 # Force price update regardless of cache

# ================================
# SCRIPT OPTIONS (For utility scripts)
# ================================
# Batch processing settings
#BATCH_SIZE=5000                         # Batch size for database operations
#LIMIT_DUPLICATES=1000                   # Limit for duplicate removal operations

# Testing and debugging
#DRY_RUN=true                           # Test mode without making changes
#AUTO_EXIT=true                         # Automatically exit after completion

# ================================
# ADVANCED OPTIONS (Optional)
# ================================
# Enable deployment fixing in 'all' mode
#RUN_FIX_DEPLOYED=false

# Enable contract verification in 'all' mode  
#RUN_VERIFY_CONTRACTS=true