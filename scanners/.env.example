# Database Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=bugchain_indexer
PGUSER=postgres
PGPASSWORD=your_password_here

# Etherscan API Keys (comma-separated)
DEFAULT_ETHERSCAN_KEYS=key1,key2,key3

# Alchemy API Key (required for FundUpdater)
ALCHEMY_API_KEY=your_alchemy_key

# Alchemy Tier (optional - will auto-detect if not set)
# Manually set to: free, growth, or enterprise
# If not set, the system will automatically detect the tier via API
# ALCHEMY_TIER=growth

# Alchemy Tier Detection API URL (optional)
# Default: http://localhost:3002
# ALCHEMY_TIER_DETECTION_URL=http://localhost:3002

# Etherscan Proxy Server Configuration (disabled by default)
USE_ETHERSCAN_PROXY=false
ETHERSCAN_PROXY_URL=http://localhost:3000

# Alchemy Proxy Configuration (disabled by default)
USE_ALCHEMY_PROXY=false
ALCHEMY_PROXY_URL=http://localhost:3002

# Scanner Configuration
TIMEDELAY_HOURS=4
FUNDUPDATEDELAY_DAYS=7
TIMEOUT_SECONDS=7200