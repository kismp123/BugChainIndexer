# Database Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=bugchain_indexer
PGUSER=postgres
PGPASSWORD=your_password_here

# Etherscan API Keys (comma-separated)
DEFAULT_ETHERSCAN_KEYS=key1,key2,key3


# Alchemy Configuration
# Direct Alchemy API key (used when proxy is disabled or as fallback)
ALCHEMY_API_KEY=your_alchemy_key

# Proxy Configuration (Optional - for high-volume operations)
# Note: Proxy servers are optional and disabled by default
# Set to 'true' only if you have proxy servers running

# Alchemy Proxy Configuration
# Set to true to use the Alchemy RPC proxy server for contract calls
USE_ALCHEMY_PROXY=false
# URL of the Alchemy proxy server (only used when USE_ALCHEMY_PROXY=true)
ALCHEMY_PROXY_URL=http://localhost:3002

# Etherscan Proxy Configuration
# Set to true to use the Etherscan proxy server
USE_ETHERSCAN_PROXY=false
# URL of the Etherscan proxy server (only used when USE_ETHERSCAN_PROXY=true)
ETHERSCAN_PROXY_URL=http://localhost:3000

# Script Settings
TIMEDELAY_HOURS=4
FUNDUPDATEDELAY_DAYS=7
TIMEOUT_SECONDS=7200
TIMEOUT_KILL_AFTER=15

# Advanced Options
RUN_FIX_DEPLOYED=false
RUN_VERIFY_CONTRACTS=true

# Network-specific RPC URLs (optional - overrides defaults)
# ETHEREUM_RPC_URL=https://custom-eth-rpc.com
# BSC_RPC_URL=https://custom-bsc-rpc.com
# POLYGON_RPC_URL=https://custom-polygon-rpc.com
# ARBITRUM_RPC_URL=https://custom-arbitrum-rpc.com
# OPTIMISM_RPC_URL=https://custom-optimism-rpc.com
# BASE_RPC_URL=https://custom-base-rpc.com
# AVALANCHE_RPC_URL=https://custom-avalanche-rpc.com